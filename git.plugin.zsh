alias gl="git log --graph --pretty='%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'"
alias gls="git log --graph --stat --pretty='%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'"
alias grevert='git checkout -- '
alias gup='git pull --rebase'
alias gs='git status'
alias gc='git commit'
alias gca='git commit -a'
alias gco='git checkout'
alias gp='git push'
alias gss='git stash save'
alias gsp='git stash pop'

